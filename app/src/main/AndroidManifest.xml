<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackerhaohao.mobileplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        单例模式的activity：launchMode="singleTask"只会在Activity栈中创建一次Activity
        加上 android:configChanges之后横竖屏切换不会重新创建Activity,执行Activity生命周期
        -->
        <activity android:name=".activity.MainActivity" android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"/>

        <activity android:name=".activity.VideoPlayerActivity"/>
    </application>

</manifest>
