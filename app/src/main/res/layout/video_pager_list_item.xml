<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp">

    <ImageView
        android:id="@+id/video_pager_list_item_iv_icon"
        android:src="@drawable/login_icon"
        android:layout_marginLeft="8dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/video_pager_list_item_iv_icon"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/video_pager_list_item_tv_disPlayName"
            android:textColor="@android:color/background_dark"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/video_pager_list_item_tv_duRation"
            android:textColor="#66000000"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/video_pager_list_item_tv_size"
        android:textColor="#66000000"
        android:singleLine="true"
        android:textSize="12sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#33000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
</RelativeLayout>