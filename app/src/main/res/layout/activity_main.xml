<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--顶部-->
    <include layout="@layout/title_bar"></include>
    <!--中部-->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>
    <!--底部-->
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:background="#11000000"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_video"
            android:drawableTop="@drawable/rb_video_drawable_selector"
            android:text="@string/rb_video_text"
            style="@style/rb_bottom_tag_style"
            />
        <RadioButton
            android:id="@+id/rb_audio"
            android:drawableTop="@drawable/rb_audio_drawable_selector"
            android:text="@string/rb_audio_text"
            style="@style/rb_bottom_tag_style"
            />
        <RadioButton
            android:id="@+id/rb_netvideo"
            android:drawableTop="@drawable/netvideo_drawable_selector"
            android:text="@string/rb_netvideo_text"
            style="@style/rb_bottom_tag_style"
            />
        <RadioButton
            android:id="@+id/rb_netaudio"
            android:drawableTop="@drawable/rb_netaudio_drawable_selector"
            android:text="@string/rb_netaudio_text"
            style="@style/rb_bottom_tag_style"
            />


    </RadioGroup>
</LinearLayout>